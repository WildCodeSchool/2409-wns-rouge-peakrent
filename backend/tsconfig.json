{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/config/*": ["./src/config/*"],
      "@/decorators/*": ["./src/decorators/*"],
      "@/entities/*": ["./src/entities/*"],
      "@/helpers/*": ["./src/helpers/*"],
      "@/middlewares/*": ["./src/middlewares/*"],
      "@/resolvers/*": ["./src/resolvers/*"],
      "@/tests/*": ["./tests/*"]
    }
  }
}
